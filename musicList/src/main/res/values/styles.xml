        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="progress_bar_style">
        <item name="android:indeterminateDrawable">@drawable/progress_rote_shape</item>
    </style>
</resources>
