<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle1" parent="AlertDialog.AppCompat.Light">
        <item name="android:background">@color/whitesmoke</item>
        <item name="android:textColor">@color/dodgerblue</item>
    </style>

    <!-- 基本弹窗样式 -->
    <style name="base_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="progress_bar_style">
        <item name="android:indeterminateDrawable">@drawable/progress_rote_shape</item>
    </style>
</resources>
